<Page x:Class="TradeProject.View.Pages.StoreProductTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeProject.View.Pages"
      xmlns:s="clr-namespace:TradeProject.ViewModel.PageControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StoreProductTablePage">

    <Page.DataContext>
        <s:StoreProductTablePageControl/>
    </Page.DataContext>

    <Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding Products}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="No"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="SalePrice" Binding="{Binding SalePrice}"/>
                <DataGridTextColumn Header="PurchasePrice" Binding="{Binding PurchasePrice}"/>
                <DataGridTextColumn Header="Sell" Binding="{Binding Sell}"/>
                <DataGridTextColumn Header="StoreCount" Binding="{Binding StoreCount}"/>
                <DataGridTextColumn Header="MonthlyProfit" Binding="{Binding Profit}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
