<Page x:Class="TradeProject.View.Pages.StorageProductTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeProject.View.Pages"
      xmlns:s="clr-namespace:TradeProject.ViewModel.PageControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StorageProductTablePage">

    <Page.DataContext>
        <s:StorageProductTablePageControl/>
    </Page.DataContext>

    <Grid>
        <DataGrid IsReadOnly="True" AutoGenerateColumns="False" ItemsSource="{Binding Products}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="No"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}"/>
                <DataGridTextColumn Header="StorageCount" Binding="{Binding StorageCount}"/>
                <DataGridTextColumn Header="ComingStorage" Binding="{Binding ComingStorage}"/>
                <DataGridTextColumn Header="LeaveStorage" Binding="{Binding LeaveStorage}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>
